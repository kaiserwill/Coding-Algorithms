//Check if an  int is a palindrome
#include<stdio.h>
#include<math.h>

//returns true if num is a palindrome
//returns false otherwise
bool is Palindrome(int num){
  //convert int to a absolute number
  n = abs(num); 
  
  //iteratively remove the digit number of the original int
  //and append to the new int
  reverse = 0; 
  while(num>0){
    digit = num%10;
    reverse = reverse*10+digit
    num /=10;
  }
  return n==reverse;
}
